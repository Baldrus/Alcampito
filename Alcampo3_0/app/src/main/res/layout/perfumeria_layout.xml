<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBE7">

    <ImageView
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:src="@drawable/a_alcampo"
        tools:layout_editor_absoluteY="66dp"
        tools:layout_editor_absoluteX="-95dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <!--Titulo-->
        <LinearLayout
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfumeria"
                android:textColor="#E40613"
                android:textStyle="bold"
                android:textSize="45dp"
                android:layout_margin="20dp"/>

        </LinearLayout>

        <!--ScrollView-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="520dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--Furby-->
                    <LinearLayout
                        android:id="@+id/furby"
                        android:layout_width="332dp"
                        android:layout_height="143dp"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/esquinas_redondeadas"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="156dp"
                            android:layout_height="126dp"
                            android:src="@drawable/furby"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="FURBY"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="¿Estás buscando un juguete divertido y interactivo para ti o para un niño? Entonces el Furby es la elección perfecta. Con su apariencia única y sus habilidades..."
                                android:textColor="@color/black" />

                        </LinearLayout>

                    </LinearLayout>

                    <!--Dinosaurio-->
                    <LinearLayout
                        android:id="@+id/dino"
                        android:layout_width="332dp"
                        android:layout_height="143dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/esquinas_redondeadas"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="156dp"
                            android:layout_height="126dp"
                            android:src="@drawable/dinosaurio"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="DINOSAURIO"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textColor="@color/black" />

                        </LinearLayout>

                    </LinearLayout>

                    <!--Cubo de Rubik-->
                    <LinearLayout
                        android:id="@+id/rubik"
                        android:layout_width="332dp"
                        android:layout_height="143dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/esquinas_redondeadas"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="156dp"
                            android:layout_height="126dp"
                            android:src="@drawable/rubik"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="CUBO DE RUBIK"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textColor="@color/black" />

                        </LinearLayout>

                    </LinearLayout>

                    <!--Halcon Milenario-->
                    <LinearLayout
                        android:id="@+id/halcon"
                        android:layout_width="332dp"
                        android:layout_height="143dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/esquinas_redondeadas"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="156dp"
                            android:layout_height="126dp"
                            android:src="@drawable/halcon_milenario"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="LEGO HALCÓN MILENARIO"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textColor="@color/black" />

                        </LinearLayout>

                    </LinearLayout>

                    <!--Scar Fortnite-->
                    <LinearLayout
                        android:id="@+id/fusil"
                        android:layout_width="332dp"
                        android:layout_height="143dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/esquinas_redondeadas"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="156dp"
                            android:layout_height="126dp"
                            android:src="@drawable/scar"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="FUSIL FORTNITE"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textColor="@color/black" />

                        </LinearLayout>

                    </LinearLayout>

                    <!--Scalextric-->
                    <LinearLayout
                        android:id="@+id/scalextric"
                        android:layout_width="332dp"
                        android:layout_height="143dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/esquinas_redondeadas"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="156dp"
                            android:layout_height="126dp"
                            android:src="@drawable/scalextric"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="SCALEXTRIC"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textColor="@color/black" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>